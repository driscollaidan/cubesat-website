---
/* Get current page path */
const currentPath = Astro.url.pathname;

/* Define links */
const links = [
  { name: "Mission Overview", href: "/" },
  { name: "Research & Science", href: "/research/" },
  { name: "News & Updates", href: "/news/" },
  { name: "Project Timeline", href: "/timeline/" },
  { name: "About Us", href: "/about/" },
];
---

<div id="main-menu" class="nav-links">
  {links.map(link => (
    <a
      href={link.href}
      class={currentPath === link.href ? "active" : ""}
    >
      {link.name}
    </a>
  ))}
</div>

<style>
/* --- Navigation Container --- */
.nav-links {
  /* Layout: Flexbox used for even horizontal spacing */
  display: flex;
  justify-content: center; 
  align-items: center; 
  gap: 2rem; 

  /* Visual Design */
  background-color: #0a0a0a; 
  padding: 1rem 3rem;
  border-bottom: 2px solid #1f1f1f; 
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.6);

  /* Make sure it stays at the top if needed */
  position: relative; 
  z-index: 1000; 
}

/* --- Individual Link Styling --- */
.nav-links a {
  /* Text Appearance */
  color: #ffffff; 
  text-decoration: none; 
  font-size: 0.95rem; 
  font-weight: 600; 
  letter-spacing: 0.6px; 
  text-transform: uppercase; 
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; 

  /* Interaction Feedback */
  transition: all 0.25s ease-in-out;
  position: relative; 
  padding: 0.25rem 0; 
}

/* --- Hover / Focus Effects --- */
.nav-links a::after {
  /* Create animated underline using pseudo-element */
  content: "";
  position: absolute;
  bottom: 0; 
  left: 0;
  width: 0%; 
  height: 2px;
  background-color: #ff6b4a; 
  transition: width 0.3s ease; 
}

.nav-links a:hover::after,
.nav-links a:focus::after {
  width: 100%; 
}

.nav-links a:hover,
.nav-links a:focus {
  color: #ff6b4a; 
}

/* --- Active Page Link --- */
.nav-links a.active {
  color: #ff6b4a;
}

.nav-links a.active::after {
  width: 100%;
}

/* --- Responsive Design Adjustments --- */
@media screen and (max-width: 700px) {
  .nav-links {
    /* Stack links vertically for mobile */
    flex-direction: column;
    gap: 1.2rem; 
    padding: 1.2rem;
  }

  .nav-links a {
    /* Make mobile links larger for touch usability */
    font-size: 1.1rem;
    text-align: center; 
  }

  /* Make underline smaller for mobile aesthetic */
  .nav-links a::after {
    height: 1.5px;
  }
}
</style>