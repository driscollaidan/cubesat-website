---
import Navigation from './Navigation.astro';
import logo from '../assets/missionpatchclear.png';
---
<header class="main-header">
  <div class="header-top">
    <img src={logo.src} alt="CubeSat Logo"/>
  </div>
  <nav>
    <Navigation />
  </nav>
</header>

<style>
header,
.main-header,
nav {
  width: 100vw; /* force full viewport width */
  max-width: none;
  margin-left: calc(50% - 50vw);
}

.main-header {
  width: 100%;
  background-color: #000;
  color: #fff;
  border-bottom: 1px solid #222;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 0;
}

.logo {
  width: 45px;
  height: 45px;
}
</style>