---
import Navigation from './Navigation.astro';
import logo from '../assets/missionpatchclear.png';
---
<header class="main-header">
  <div class="header-top">
    <img src={logo.src} alt="CubeSat logo" class="cubesat-logo" />
    <h1>Purdue University: CubeSat</h1>
  </div>
  <nav>
    <Navigation />
  </nav>
</header>

<style>
header,
.main-header,
nav {
  width: 100vw; /* force full viewport width */
  max-width: none;
  margin-left: calc(50% - 50vw);
}

.main-header {
  width: 100%;
  background-color: #000;
  color: #fff;
  border-bottom: 1px solid #222;
}

.header-top {
  display: flex;
  align-items: center;        /* vertical centering */
  justify-content: flex-start;    /* center horizontally on the page */
  gap: 1rem;                  /* space between image and text */
  padding: 0.5rem 0;
}

.cubesat-logo {
  width: 75px;
  height: 75px;
  object-fit: contain;        /* keeps the patch round and neat */
}

.header-top h1 {
  font-size: 1.4rem;
  font-weight: 600;
  margin: 0;                  /* prevents extra vertical offset */
}

</style>